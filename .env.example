# Backend Configuration
# These variables are used by the `python manage.py create_default_user` command
# to set the credentials for the default admin and user accounts.

# Django secret key (CHANGE THIS IN PRODUCTION â€“ never commit real prod key)
DJANGO_SECRET_KEY=replace_me_dev_only

# Base URL for internal API calls (used by HydroChat config loader)
HYDRO_BASE_URL=http://localhost:8000
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=your_secure_admin_password
DEFAULT_USER_USERNAME=default_user
DEFAULT_USER_PASSWORD=your_secure_user_password

# Mesh Generation Settings
# Use DEEP for the current, more detailed 3D mesh, or SHALLOW for the previous, flatter version.
MESH_GENERATION_MODE=DEEP

# Gemini LLM Configuration (Phase 14 & 17)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_MAX_INPUT_LENGTH=1000
LLM_REQUEST_TIMEOUT=30.0
LLM_MAX_RETRIES=3

# Redis State Management (Phase 18) - Optional
# Set USE_REDIS_STATE=true to enable Redis-backed conversation persistence
# Requires Redis server running (Docker, WSL, or Windows binary)
USE_REDIS_STATE=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5
REDIS_STATE_TTL=7200